      stylesheets="@WelcomeScreenBackground.css"
      spacing="10"
      alignment="CENTER">
    <children>
        <!-- ChoiceBox fÃ¼r die Learning Packages -->
        <ChoiceBox fx:id="learningPackagesBox" />

